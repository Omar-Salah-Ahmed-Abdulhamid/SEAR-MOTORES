@model IEnumerable<PurchaseVM>


@{
	ViewData["title"] = "MyPurchases";
}

<h2 class="mt-3">MyPurchases</h2>

@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning mt-3">
        <h4 class="alert-heading">No Car you buy!</h4>
        <p class="mb-0">you dont buy any car. </p>
    </div>
}
else
{
    <div class="mt-3">
        <table class="table table-active border-primary">
            <tbody>
                @foreach (var Purchase in Model)
                {
                    <tr class="border-1 border-success">
                        <td>
                            <div class="d-flex">
                                <div class="pe-4">
                                    <img src="@($"{FileSiting.ImagePath}/{Purchase.Cover}")"
                                         alt="@Purchase.CarName" style="max-width:150px" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4>@Purchase.BrandName</h4>
                                    <h5>@Purchase.CarName</h5>
                                    <h6>Category: @Purchase.CategoryName</h6>
                                    <h6>Country: @Purchase.Country</h6>
                                    <h6>Date: @Purchase.PurchaseDate.ToString("yyyy-MM-dd")</h6>
                                </div>
                            </div>
                        </td>

                        <td class="align-middle text-end">
                            <h5 class="text-success">@Purchase.FinalPrice $</h5>
                            <button type="button" class="btn btn-danger btn-sm mt-2 js-delete" data-id="@Purchase.Id">
                                <i class="bi bi-trash3"></i> Delete
                            </button>
                        </td>


                    </tr>
                }
            </tbody>

        </table>
    </div>
    
}

@section Scripts {
	<script src="~/js/deletecarinpurchase.js"></script>
}
