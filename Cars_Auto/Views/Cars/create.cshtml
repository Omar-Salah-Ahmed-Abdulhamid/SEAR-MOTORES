@model CreatCarFromVM
@{
	ViewData["title"] = "Create";
}

<h5 class="mt-3">
	<i class="bi bi-plus-circle-dotted "></i>
	Add New Cars
</h5>

<form asp-controller="Cars" enctype="multipart/form-data" method="post">
	<div class="row">
		<div class="col-md-6">
			<div>
				<label  asp-for="Name" class="form-label mt-4">Car Name</label>
				<input type="text" class="form-control" asp-for="Name"  placeholder="Care Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="BrandName" class="form-label mt-4">Brand Name</label>
				<input type="text" class="form-control" asp-for="BrandName" placeholder="Brand Name">
				<span asp-validation-for="BrandName" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Country" class="form-label mt-4">Countery Name</label>
				<input type="text" class="form-control" asp-for="Country" placeholder="Country Name">
				<span asp-validation-for="Country" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Price" class="form-label mt-4">Price of a Car</label>
				<input type="text" class="form-control" asp-for="Price" placeholder="Price of a Car">
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="CategorieyId" class="form-label mt-4">Select catogry</label>
				<select class="form-select" asp-for="CategorieyId" asp-items="@Model.Catogryies">
				<option></option>
				</select>				
				<span asp-validation-for="CategorieyId" class="text-danger"></span>
			</div>
			
			<div>
				<label asp-for="Description" class="form-label mt-4">Description </label>
				<textarea class="form-control" asp-for="Description" placeholder="Description" rows="3"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="cover" class="form-label mt-4">Cover</label>
				<input class="form-control" type="file" asp-for=cover
				data-rule-extension="@FileSiting.AllowedExtensions.Replace(".",string.Empty)"
					   data-msg-extension="not allowed extension must be @FileSiting.AllowedExtensions only"
				data-rule-FileMaxSize="@FileSiting.MaxSizinByte"
					   data-msg-FileMaxSize="Maxmum size file allowed is @FileSiting.MaxSizinMB MB ">

				<small class="form-text text-muted">only jpj ,jpeg ,png  are allowed whith Max size is 1MB></small>
				<span asp-validation-for="cover" class="text-danger d-block"></span>

			</div>
			<div>
				<label asp-for="Images" class="form-label mt-4">Upload Images</label>
				<input id="images" class="form-control" type="file" asp-for="Images" multiple />
				<span asp-validation-for="Images" class="text-danger d-block"></span>

			</div>

			<div id="images-preview" class="row mt-3"></div>

			<div>
				<button type="submit" class="btn btn-primary  mt-3">Save</button>
			</div>
		</div>
		<div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
				<img class="cover-preview d-none" alt="cover" />
		</div>

		
	</div>
	
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/form-cover.js" asp-append-version="true"></script>
	<script src="~/js/filesizevalidator.js"asp-append-version="true" ></script>
	<script src="~/js/form-images.js"></script>
}