@model IEnumerable<Car>
@{
	ViewData["title"] = "Cars";
}

<a class="btn btn-primary btn-lg mt-3" asp-action="create">
	<i class="bi bi-plus-circle-dotted"></i>
	Add Cars
</a>

@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning mt-3">
        <h4 class="alert-heading">No Car!</h4>
        <p class="mb-0">No car Add yet. </p>
    </div>
}
else
{
    <div class="mt-3">
        <table class="table table-active border-primary">
            <tbody>
            @foreach (var car in Model)
            {
                <tr class="border-1 border-success">
                    <td>
                        <div class="d-flex">
                        <div class="pe-4">
                         <img src="@($"{FileSiting.ImagePath}/{car.cover}")"  alt="@car.Name" style="max-width:150px"/>
                        </div>
                          <div class="d-flex flex-column justify-content-center">
                           <h4 >
                                @car.BrandName
                            </h4>
                            <h5 >
                                 @car.Name
                            </h5>
                        </div>
                            </div>                      
                    </td>
                        <td class="align-middle">
                        <div class="d-flex justify-content-end">
                                <a class="btn btn-primary me-2" asp-action="update" asp-route-Id="@car.Id">
                                    <i class="bi bi-pencil-fill"></i>
                            </a>
                                <button type="button" class="btn btn-danger ms-2 js-delete" data-id="@car.Id">
                                    <i class="bi bi-trash3"></i>
                                </button>

                                
                        </div>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
}

@section Scripts {
	<script src="~/js/delete.js" asp-append-version="true"></script>
}